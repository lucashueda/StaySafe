<SM>:
  Screen:
    name: 'menu'
    bgcolor: .9,.55,.141,1
    BoxLayout: 
      padding: 50
      spacing: 50
      orientation: 'vertical'
      Image:
        source: 'logo.png'
      Button:
        text: 'Monitorar direção'
        on_release: root.current = 'camera_facial'
        height: '75dp'
      Button:
        text: 'Buscar paradas'
        height: '75dp'
        on_release: root.current = 'safe_places'

  FaceCam:
    name: 'camera_facial'

  Places:
    name: 'safe_places'

  Map:
    name: 'map'

<FaceCam>:
  BoxLayout:
    orientation: 'vertical'
    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Postos'
          on_release: app.root.current = 'safe_places'
        ActionButton:
          text: 'Menu'
          on_release: app.root.current = 'menu'
    KivyCamera:
      id: fcam
      height: 500
      allow_stretch: True
      keep_ratio: False
      size_hint_y: None
      size_hint_x: None
      width: 500
      height: 560
    Button:
      text: 'Clique aqui'
      on_release: fcam.start()

<Places>:
  BoxLayout:
    ortientation: 'vertical'
    ScrollView:
      id: scrollview
      BoxLayout:
        id: scroll
        spacing: 20
        padding: 10
        id: safe_places
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
      

<Map>:
  BoxLayout:
    orientation: 'vertical'

    ActionBar:
      ActionView:
        ActionPrevious:
          title: 'Postos'
          on_release: app.root.current = 'safe_places'
        ActionButton:
          text: 'Menu'
          on_release: app.root.current = 'menu'

    Image:
      id: choose_map
      allow_stretch: True
      keep_ratio: False
      size_hint_x: None
      width: 500
      height: 660
      source: None